@model HotelReservationManager.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomsId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomsId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival_date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departure_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breakfast)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Breakfast)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.All_inclusive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.All_inclusive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <h4>Clients</h4>
    @foreach (var attendee in Model.Clients)
    {
        <a asp-controller="Attendees" asp-action="Details" asp-route-id=" @attendee.ClientId"> @attendee.First_Name</a>
        <a asp-controller="Attendees" asp-action="Details" asp-route-id=" @attendee.ClientId"> @attendee.Last_Name</a>
        <a asp-controller="Attendees" asp-action="Details" asp-route-id=" @attendee.ClientId"> @attendee.Phone</a>
        <a asp-controller="Attendees" asp-action="Details" asp-route-id=" @attendee.ClientId"> @attendee.E_mail</a>
        <a asp-controller="Attendees" asp-action="Details" asp-route-id=" @attendee.ClientId"> @attendee.Adult</a>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ResId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
