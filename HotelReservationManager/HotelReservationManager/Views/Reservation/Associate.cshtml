@model HotelReservationManager.Models.AssociateViewModel

<h1>Assign to Reservation</h1>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label for="ClientId">Client:</label>
				@Html.DropDownListFor(m => m.ClientId, ViewBag.Clients as SelectList, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label for="ResId">Room number:</label>
				@Html.DropDownListFor(m => m.ResId, ViewBag.Reservations as SelectList, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Associate</button>
			</div>
		</form>
	</div>
</div>