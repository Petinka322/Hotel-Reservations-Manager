@model HotelReservationManager.Models.AssociateViewModel

<h1>Associate Client with Reservation</h1>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label for="eventId">Event:</label>
				@Html.DropDownListFor(m => m.ResId, ViewBag.Rooms as SelectList, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label for="attendeeId">Attendee:</label>
				@Html.DropDownListFor(m => m.ClientId, ViewBag.Clients as SelectList, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Associate</button>
			</div>
		</form>
	</div>
</div>